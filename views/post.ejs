<%- include('partials/header') -%>
<div class="container mb-5">
  <div class="row justify-content-center mt-5">
    <div class="col-sx col-sm-6 border rounded">
      <h2><%= post.title %></h2>
      <img class="img-fluid border rounded" src="<%= post.image%>" />
      <div class="row justify-content-around justify-content-sm-between">
        <form
          class="col-sm-auto mr-sm-auto"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btns-color fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-auto">Likes: <%= post.likes %></h3>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-sm-auto ml-auto"
        >
          <button class="btn btn-secondary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-xs col-sm-3 mt-5">
      <p class="caption"><%= post.caption %></p>
    </div>
    <div class="col-6 mt-5">
      <a class="mt-1 btn btns-color" href="/profile">Return to Profile</a>
      <a class="mt-1 btn btns-color" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
